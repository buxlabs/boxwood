{
  "name": "boxwood",
  "version": "0.60.4",
  "description": "Compile HTML templates into JS",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava 'test/spec/**/*.spec.js' 'src/**/*.spec.js' --no-worker-threads",
    "coverage": "nyc npm test",
    "benchmark": "ava test/benchmark.spec.js --verbose",
    "watch": "npm test -- --watch",
    "prepush": "npm run lint && npm test"
  },
  "ava": {
    "files": [
      "test/spec/**/*.js",
      "**/*.spec.js"
    ]
  },
  "engines": {
    "node": ">= 16.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buxlabs/boxwood.git"
  },
  "keywords": [
    "html",
    "engine",
    "javascript"
  ],
  "author": {
    "name": "Emil Ajdyna",
    "email": "emil@ajdyna.com",
    "url": "https://buxlabs.pl/en"
  },
  "contributors": [
    {
      "name": "Przemys≈Çaw Konieczniak",
      "email": "przemyslaw.konieczniak@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buxlabs/boxwood/issues"
  },
  "homepage": "https://github.com/buxlabs/boxwood#readme",
  "dependencies": {
    "abstract-syntax-tree": "^2.20.6",
    "ansi-colors": "^4.1.3",
    "css-tree": "^2.2.1",
    "csso": "^5.0.5",
    "esbuild": "^0.15.5",
    "himalaya": "1.1.0",
    "himalaya-walk": "1.0.0",
    "html-minifier": "4.0.0",
    "path-to-regexp": "^6.2.1",
    "pure-conditions": "1.2.1",
    "pure-utilities": "^1.2.4",
    "string-hash": "1.1.3",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^4.3.1",
    "benchmark": "2.1.4",
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "jsdom": "^20.0.0",
    "lodash.template": "4.5.0",
    "mustache": "^4.2.0",
    "nyc": "15.1.0",
    "puppeteer": "^16.2.0",
    "standard": "^17.0.0",
    "underscore": "^1.13.4"
  },
  "standard": {
    "ignore": [
      "test/fixtures/**/*",
      "test/spec/**/*",
      "src/**/*.spec.js"
    ]
  }
}
